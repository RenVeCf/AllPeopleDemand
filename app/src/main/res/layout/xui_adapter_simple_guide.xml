<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <com.xuexiang.xui.widget.alpha.XUIAlphaTextView
        android:id="@+id/tv_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="?attr/xui_guide_btn_margin_bottom"
        android:background="@mipmap/ic_loading_bt"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="?attr/xui_guide_btn_padding_vertical"
        android:paddingLeft="?attr/xui_guide_btn_padding_horizontal"
        android:paddingRight="?attr/xui_guide_btn_padding_horizontal"
        android:paddingTop="?attr/xui_guide_btn_padding_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
