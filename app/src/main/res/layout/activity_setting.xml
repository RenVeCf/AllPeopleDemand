<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ipd.allpeopledemand.activity.SettingActivity">

    <com.ipd.allpeopledemand.common.view.TopView
        android:id="@+id/tv_setting"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:gravity="bottom"
        app:is_back="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="设置" />

    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
        android:id="@+id/stv_version"
        android:layout_width="0dp"
        android:layout_height="@dimen/y150"
        android:layout_marginTop="@dimen/y20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_setting"
        app:sLeftTextColor="@color/black"
        app:sLeftTextSize="18sp"
        app:sLeftTextString="版本信息"
        app:sRightTextSize="18sp" />

    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
        android:id="@+id/stv_cache_clear"
        android:layout_width="0dp"
        android:layout_height="@dimen/y150"
        android:layout_marginTop="@dimen/y20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stv_version"
        app:sLeftTextColor="@color/black"
        app:sLeftTextSize="18sp"
        app:sLeftTextString="清楚缓存"
        app:sRightIconRes="@mipmap/ic_arrow_end"
        app:sRightTextColor="@color/tx_bottom_navigation"
        app:sRightTextSize="18sp" />

    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
        android:id="@+id/stv_platform_introduction"
        android:layout_width="0dp"
        android:layout_height="@dimen/y150"
        android:layout_marginTop="@dimen/y20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stv_cache_clear"
        app:sLeftTextColor="@color/black"
        app:sLeftTextSize="18sp"
        app:sLeftTextString="平台介绍"
        app:sRightIconRes="@mipmap/ic_arrow_end" />

    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
        android:id="@+id/stv_modify_pwd"
        android:layout_width="0dp"
        android:layout_height="@dimen/y150"
        android:layout_marginTop="@dimen/y20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stv_platform_introduction"
        app:sLeftTextColor="@color/black"
        app:sLeftTextSize="18sp"
        app:sLeftTextString="修改密码"
        app:sRightIconRes="@mipmap/ic_arrow_end" />

    <com.xuexiang.xui.widget.button.RippleView
        android:id="@+id/rv_out"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/tx_bottom_navigation_select"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rv_type="simpleRipple">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y150"
            android:layout_gravity="center"
            android:layout_marginStart="?attr/xui_config_content_spacing_horizontal"
            android:layout_marginEnd="?attr/xui_config_content_spacing_horizontal"
            android:gravity="center"
            android:text="退出当前登录账户"
            android:textColor="@color/xui_config_color_white"
            android:textSize="16sp" />
    </com.xuexiang.xui.widget.button.RippleView>
</androidx.constraintlayout.widget.ConstraintLayout>
