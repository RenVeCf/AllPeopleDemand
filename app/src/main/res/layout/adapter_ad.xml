<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.xuexiang.xui.widget.textview.label.LabelImageView
        android:id="@+id/iv_label"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y350"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_test_ad"
        app:label_backgroundColor="@color/tx_bottom_navigation_select"
        app:label_orientation="LEFT_TOP"
        app:label_text="广告"
        app:label_textSize="16sp"
        app:label_textStyle="ITALIC" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/y50"
        android:layout_marginBottom="@dimen/y50"
        android:background="@color/bg_fine_line" />
</LinearLayout>
