<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/y50"
        android:layout_marginBottom="@dimen/y50"
        android:background="@color/bg_fine_line" />

    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
        android:id="@+id/stv_points_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200"
        android:paddingStart="@dimen/x50"
        android:paddingEnd="@dimen/x50"
        app:sDividerLineType="none"
        app:sLeftBottomTextColor="@color/tx_bottom_navigation"
        app:sLeftBottomTextSize="12sp"
        app:sLeftTextColor="@color/black"
        app:sLeftTopTextColor="@color/black"
        app:sLeftTopTextSize="18sp"
        app:sLeftViewGravity="left_center"
        app:sRightTextSize="18sp" />
</LinearLayout>
